#!/bin/bash

# Current version
export VERSION="|V1.0.03|2024-05-25|"

# Lidar type：A1/A2/C1/G4/S2L/LD14P/MS200
export LIDAR_TYPE=LD19

# Depth camera type：ascamera
export DEPTH_CAMERA_TYPE=ascamera

# Machine type：JetRover_Mecanum/JetRover_Tank/JetRover_Acker
export MACHINE_TYPE=JetRover_Acker

# Master/slave settings：robot_xxx
export HOST=/ #robot_1
export MASTER=/ #robot_1

# Language settings, mainly for voice：Chinese/English
export ASR_LANGUAGE=Chinese

export need_compile=False
export RMW_IMPLEMENTATION=rmw_cyclonedds_cpp
export ROS_DOMAIN_ID=0

echo -e "\033[32m----------------------------------------------
The current environment is ROS2|The current environment is ROS2
----------------------------------------------\033[0m"
echo -e "LIDAR:   \033[32m$LIDAR_TYPE\033[0m"
echo -e "CAMERA:  \033[32m$DEPTH_CAMERA_TYPE\033[0m"
echo -e "MACHINE: \033[32m$MACHINE_TYPE\033[0m"
echo -e "HOST:    \033[32m$HOST\033[0m"
echo -e "MASTER:  \033[32m$MASTER\033[0m"
echo -e "ROS_DOMAIN_ID: \033[32m$ROS_DOMAIN_ID\033[0m"
echo -e "VERSION: \033[32m$VERSION\033[0m"
